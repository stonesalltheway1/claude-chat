{
  "id": "com.claudechat.app",
  "name": "Claude Chat Assistant",
  "short_name": "Claude Chat",
  "description": "Powerful AI assistant with Claude 3.7 featuring advanced thinking capabilities and file processing",
  "version": "2.0.0",
  "start_url": "/?source=pwa",
  "scope": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "browser"],
  "background_color": "#1a1a20",
  "theme_color": "#7e57c2",
  "dir": "ltr",
  "lang": "en",
  "orientation": "any",
  "categories": ["productivity", "utilities", "ai", "communication"],
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  "prefer_related_applications": false,
  
  "icons": [
    {
      "src": "assets/img/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "assets/img/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "assets/img/icon-maskable-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "assets/img/icon-maskable-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "assets/img/icon-monochrome.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "monochrome"
    }
  ],
  
  "screenshots": [
    {
      "src": "assets/img/screenshot-wide.webp",
      "sizes": "1920x1080",
      "type": "image/webp",
      "form_factor": "wide"
    },
    {
      "src": "assets/img/screenshot-narrow.webp",
      "sizes": "1080x1920",
      "type": "image/webp",
      "form_factor": "narrow"
    }
  ],
  
  "shortcuts": [
    {
      "name": "New Chat",
      "short_name": "New",
      "description": "Start a new conversation with Claude",
      "url": "/?action=new",
      "icons": [{ "src": "assets/img/shortcut-new-96.png", "sizes": "96x96" }]
    },
    {
      "name": "Continue Chat",
      "short_name": "Continue",
      "description": "Continue your last conversation",
      "url": "/?action=continue",
      "icons": [{ "src": "assets/img/shortcut-continue-96.png", "sizes": "96x96" }]
    },
    {
      "name": "Settings",
      "description": "Adjust your preferences",
      "url": "/?action=settings",
      "icons": [{ "src": "assets/img/shortcut-settings-96.png", "sizes": "96x96" }]
    }
  ],
  
  "share_target": {
    "action": "/share-target/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*", "text/*", "application/pdf", "application/json"]
        }
      ]
    }
  },
  
  "file_handlers": [
    {
      "action": "/open-file/",
      "accept": {
        "text/*": [".txt", ".md"],
        "application/json": [".json"],
        "application/pdf": [".pdf"]
      }
    }
  ],
  
  "protocol_handlers": [
    {
      "protocol": "web+claudechat",
      "url": "/protocol?chat=%s"
    }
  ],
  
  "handle_links": "preferred",
  
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "note_taking": {
    "new_note_url": "/new-note?content=%7Bnote%7D",
    "supports_creation": true
  }
}