{
  "name": "insight-wave",
  "version": "2.1.0",
  "private": true,
  "description": "Advanced AI conversation platform with component-based architecture",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .js",
    "format": "prettier --write \"**/*.{js,html,css,json}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "serve:prod": "serve dist -s",
    "analyze": "vite build --analyze",
    "prepare": "husky",
    "generate:assets": "python generate_assets.py"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stonesalltheway1/insight-wave.git"
  },
  "keywords": [
    "ai",
    "conversation",
    "component-architecture",
    "pwa",
    "web-components"
  ],
  "author": {
    "name": "InsightWave Team",
    "url": "https://insightwave.app"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stonesalltheway1/claude-chat"
  },
  "homepage": "https://insightwave.app",
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "> 0.5%"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5",
    "serve": "^14.2.1",
    "vite": "^5.1.4",
    "vite-plugin-pwa": "^0.17.4",
    "vite-plugin-inspect": "^0.8.2",
    "vitest": "^1.2.2",
    "workbox-window": "^7.0.0"
  },
  "dependencies": {
    "comlink": "^4.4.1",
    "lit": "^3.1.0",
    "marked": "^11.1.1",
    "highlight.js": "^11.9.0",
    "idb-keyval": "^6.2.1",
    "nanoid": "^5.0.4"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,ts,css,html,json,md}": "prettier --write"
  }
}